<UserControl x:Class="MediaSphere.Login"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MediaSphere"
             mc:Ignorable="d" 
             Height="700" Width="900">
    <Grid>

        <ContentControl x:Name="MainContent"/>

        <Grid HorizontalAlignment="Center"
              VerticalAlignment="Top"
              Width="400"
              Background="White"
              Margin="20">

            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <Image Grid.Row="0"
                   Source="/MediaSphereLogo.png"
                   Height="200"
                   Stretch="Uniform"
                   HorizontalAlignment="Center"
                   Margin="0,0,0,10"/>

            <StackPanel Grid.Row="1"
                        Width="300"
                        HorizontalAlignment="Center"
                        Margin="0,20,0,20">

                <TextBlock Text="Benutzername:" Margin="0,0,0,5"/>
                <TextBox Name="TextBoxBenutzername" Height="30" Margin="0,0,0,15" Padding="5"/>

                <TextBlock Text="Passwort:" Margin="0,0,0,5"/>
                <PasswordBox Name="PasswortBox" Height="30" Margin="0,0,0,10" Padding="5"/>

               
                <CheckBox Name="CheckBoxAngemeldetBleiben"
                          Content="Angemeldet bleiben"
                          Margin="0,0,0,5"
                          HorizontalAlignment="Left"/>

              
                <Label Name="LabelFalscheDaten"
                       HorizontalAlignment="Center"
                       Margin="0,0,0,7"
                       FontSize="12"
                       Visibility="Hidden"
                       Foreground="Red">
                    Anmeldedaten falsch!
                </Label>

                <Button Name="ButtonAnmelden" Content="Anmelden"
                        Height="35"
                        Background="#1A73E8"
                        Foreground="White"
                        FontWeight="Bold"
                        BorderBrush="#1A73E8"
                        BorderThickness="1"
                        Margin="0,0,0,20"
                        Click="ButtonAnmelden_Click"/>

                <TextBlock Text="Oder"
                           FontSize="12"
                           Foreground="Gray"
                           HorizontalAlignment="Center"
                           Margin="0,0,0,10"/>

                <Button Content="Als Gast fortfahren"
                        Height="30"
                        Background="#E0E0E0"
                        Foreground="Black"
                        BorderBrush="#C0C0C0"
                        BorderThickness="1"
                        Margin="0,0,0,20"/>

                <StackPanel Orientation="Horizontal"
                            HorizontalAlignment="Center"
                            Margin="0,10,0,0">
                    <TextBlock Text="Noch kein Konto?" FontSize="12"/>
                    <Button x:Name="ButtonRegistrieren"
                            Content="Registrieren"
                            FontSize="12"
                            Background="Transparent"
                            Foreground="#1A73E8"
                            BorderThickness="0"
                            Padding="0"
                            Margin="5,0,0,0"
                            Cursor="Hand"
                            Click="ButtonRegistrieren_Click" />
                </StackPanel>
            </StackPanel>
        </Grid>
    </Grid>
</UserControl>
