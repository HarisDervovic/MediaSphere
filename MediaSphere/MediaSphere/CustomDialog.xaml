<Window x:Class="MediaSphere.CustomDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        WindowStyle="None"
        Height="220" Width="400"
        Background="Transparent"
        AllowsTransparency="True"
        ShowInTaskbar="False">

    <Border Background="White"
            BorderBrush="#1A73E8"
            BorderThickness="2"
            CornerRadius="12"
            Padding="20"
            SnapsToDevicePixels="True"
            MouseDown="DialogBorder_MouseDown">

        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <Grid Grid.Row="0" HorizontalAlignment="Center" Margin="0,0,0,10">
                <Image x:Name="IconErfolg"
                       Source="/BlueSuccess.png"
                       Width="48" Height="48"
                       Visibility="Hidden"/>
                <Image x:Name="IconWarnung"
                       Source="/warning-xxl.png"
                       Width="48" Height="48"
                       Visibility="Hidden"/>
            </Grid>

            <TextBlock x:Name="TextMessage"
                       Grid.Row="1"
                       FontSize="16"
                       TextWrapping="Wrap"
                       Foreground="Black"
                       TextAlignment="Center"
                       VerticalAlignment="Center"
                       HorizontalAlignment="Center"/>

            <Button Grid.Row="2"
                    Content="OK"
                    Width="100"
                    Height="35"
                    Margin="0,20,0,0"
                    HorizontalAlignment="Center"
                    Background="#1A73E8"
                    Foreground="White"
                    BorderBrush="#1A73E8"
                    BorderThickness="1"
                    FontWeight="Bold"
                    Cursor="Hand"
                    Click="Button_OK_Click"/>
        </Grid>
    </Border>
</Window>
